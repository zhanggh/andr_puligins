<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	     android:orientation="vertical"
	    android:background="@drawable/menu_item_selector"
	    >
		 <LinearLayout
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:layout_marginTop="19dip"
		     android:layout_marginLeft="17dip"
		     android:orientation="horizontal"
		 >
			  <LinearLayout
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:orientation="horizontal"
			 >
			 <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="15sp"
			        android:textColor="@color/new_colora2a2a2"
			        android:text="收件人:"
			      />
			    <TextView
			        android:id="@+id/tv_reciever"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="2dip"
			        android:textSize="15sp"
			        android:textColor="#138af8"
			        android:text="某某书记"
			      />
		    </LinearLayout>

		      <LinearLayout
		          android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:gravity="right"
		          android:orientation="horizontal" >

		    <TextView
		        android:id="@+id/tv_status"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="11sp"
		        android:gravity="right"
		        android:textColor="@color/font_whit"
		        android:background="@color/kd_status_0"
		        android:padding="3dip"
		        android:layout_marginRight="11dip"
		        android:text="已受理"
		      />
		    </LinearLayout>
	    </LinearLayout>
	     <TextView
	        android:id="@+id/tv_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="13sp"
	        android:layout_marginTop="8dip"
	        android:layout_marginLeft="17dip"
	        android:layout_marginBottom="10dip"
	        android:textColor="@color/grey_font2"
	        android:text="2014-09-21"
	      />
	     <TextView
	        android:id="@+id/tv_email_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:layout_marginTop="8dip"
	        android:layout_marginLeft="14dip"
	        android:layout_marginBottom="10dip"
	        android:textColor="#161616"
	        android:text="某某地方公共设施被严重损坏"
	      />
	 
</LinearLayout>

    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="80dip"
	    android:id="@+id/ll_med_pics"
	    android:gravity="center_vertical"
	    android:orientation="horizontal"
	    android:background="@color/white"
	    android:visibility="gone"
	    >
	        <ImageView
		        android:layout_width="65dip"
		        android:layout_height="65dip"
		        android:id="@+id/iv_myimage1"
		        android:scaleType="fitXY"
		        android:layout_marginLeft="20dip"
		        android:clickable="true"
		        android:onClick="showImg"
		        />
	        <ImageView
		        android:layout_width="65dip"
		        android:layout_height="65dip"
		        android:id="@+id/iv_myimage2"
		        android:scaleType="fitXY"
		        android:clickable="true"
		        android:onClick="showImg"
		        android:layout_marginLeft="10dip"
		        />
	        <ImageView
		        android:layout_width="65dip"
		        android:layout_height="65dip"
		        android:id="@+id/iv_myimage3"
		        android:scaleType="fitXY"
		        android:clickable="true"
		        android:onClick="showImg"
		        android:layout_marginLeft="10dip"
		        />
    </LinearLayout>
    
    <RelativeLayout
        		android:id="@+id/ly_reply_cx"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_margin="10dip"
			    >
			     <ImageView
			        android:id="@+id/iv_arrow"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="40dip"
			        android:layout_alignParentLeft="true"
			        android:layout_alignParentTop="true"
			        android:src="@drawable/delta"
			      />
			      <RelativeLayout
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:background="@color/zh_tips_bar"
				    android:layout_below="@+id/iv_arrow"
				    >
 						<LinearLayout 
							    android:layout_width="match_parent"
							    android:layout_height="wrap_content" 
							     android:orientation="vertical"
							    android:background="@drawable/menu_item_selector"
							    >
							 <LinearLayout
							     android:layout_width="match_parent"
							     android:layout_height="wrap_content"
							     android:layout_marginTop="19dip"
							     android:layout_marginLeft="17dip"
							     android:orientation="horizontal"
							 >
								    <TextView
								        android:layout_width="wrap_content"
								        android:layout_height="wrap_content"
								        android:textSize="14sp"
								        android:textColor="@color/blue_font"
								        android:text="回复意见:"
								      />
						    </LinearLayout>
						     <TextView
						        android:id="@+id/tv_reply_time"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:textSize="13sp"
						        android:layout_marginTop="8dip"
						        android:layout_marginLeft="17dip"
						        android:layout_marginBottom="10dip"
						        android:textColor="@color/grey_font2"
						        android:text="2014-09-21"
						      />
					     <TextView
					        android:id="@+id/tv_reply_context"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:textSize="15sp"
					        android:layout_marginTop="8dip"
					        android:layout_marginLeft="14dip"
					        android:layout_marginBottom="10dip"
					        android:textColor="#161616"
					        android:text="已知悉"
					      />
						</LinearLayout>
				    </RelativeLayout>
			    </RelativeLayout>
</LinearLayout>
