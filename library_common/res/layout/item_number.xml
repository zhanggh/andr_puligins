<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="30dip"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
        <!-- 第一行 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
                <TextView
                    android:id="@+id/tv_num_gov"
                    android:layout_width="@dimen/with_91"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:background="@drawable/num_item_selector"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textSize="@dimen/text_tile_size" />
                <TextView
                    android:id="@+id/tv_num_hos"
                    android:layout_width="@dimen/with_91"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:background="@drawable/num_item_selector"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textSize="@dimen/text_tile_size" />
                <TextView
                     android:id="@+id/tv_num_help"
                    android:layout_width="@dimen/with_91"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:background="@drawable/num_item_selector"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textSize="@dimen/text_tile_size" />

                <TextView
                     android:id="@+id/tv_num_societyhelp"
                    android:layout_width="@dimen/with_91"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:background="@drawable/num_item_selector"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textSize="@dimen/text_tile_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_num_libry"
                    android:layout_width="@dimen/with_91"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:background="@drawable/num_item_selector"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textSize="@dimen/text_tile_size" />

                <TextView
                    android:id="@+id/tv_num_museum"
                    android:layout_width="@dimen/with_91"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:background="@drawable/num_item_selector"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textSize="@dimen/text_tile_size" />

                <TextView
                    android:id="@+id/tv_num_traffic"
                    android:layout_width="@dimen/with_91"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:background="@drawable/num_item_selector"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textSize="@dimen/text_tile_size" />

                <TextView
                    android:id="@+id/tv_num_bank"
                    android:layout_width="@dimen/with_91"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:background="@drawable/num_item_selector"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textSize="@dimen/text_tile_size" />
        </LinearLayout>
</LinearLayout>