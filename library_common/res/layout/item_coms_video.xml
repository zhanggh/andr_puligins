<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:background="@null"
    >
    <RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="162dip"
	     android:orientation="vertical"
	     android:gravity="center_horizontal|bottom"
	      android:background="@drawable/menu_item_selector"
	      android:id="@+id/rl_new1"
	      android:layout_margin="5dip"
	 >
	 	<ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
      />
	 	 <ImageView
		        android:id="@+id/iv_video1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/video"
		        android:layout_centerInParent="true"
		      />
	 	<LinearLayout
	 	    android:id="@+id/ll_img_bar"
	 	    android:layout_width="match_parent"
	 	    android:layout_height="40dip"
	 	    android:layout_alignParentBottom="true"
	 	    android:background="#85070707"
	 	    android:gravity="center_vertical"
	 	    android:orientation="horizontal"
	 	    android:paddingLeft="11dip"
	 	    android:singleLine="true"
	 	    android:textColor="@color/white"
	 	    android:textSize="16sp" >

	 	    <TextView
	 	        android:id="@+id/tv_title"
	 	        android:layout_width="120dip"
	 	        android:layout_height="40dip"
	 	        android:layout_weight="0.54"
	 	        android:gravity="center_vertical"
	 	        android:singleLine="true"
	 	        android:text="旅行记"
	 	        android:textColor="@color/white"
	 	        android:textSize="16sp" />

	 	    <ImageView
	 	        android:id="@+id/img_view_times"
	 	        android:layout_width="wrap_content"
	 	        android:layout_height="wrap_content" />

	 	    <TextView
	 	        android:id="@+id/tx_view_times"
	 	        android:layout_width="wrap_content"
	 	        android:layout_height="wrap_content"
	 	        android:layout_marginLeft="5dip"
	 	        android:textColor="@color/white" />

	 	    <ImageView
	 	        android:id="@+id/im_col_times"
	 	        android:layout_width="wrap_content"
	 	        android:layout_height="wrap_content"
	 	        android:layout_marginLeft="15dip" />

	 	    <TextView
	 	        android:id="@+id/tx_col_times"
	 	        android:layout_width="wrap_content"
	 	        android:layout_height="wrap_content"
	 	        android:layout_marginLeft="5dip"
	 	        android:textColor="@color/white" />

	 	    <ImageView
	 	        android:id="@+id/im_cm_times"
	 	        android:layout_width="wrap_content"
	 	        android:layout_height="wrap_content"
	 	        android:layout_marginLeft="15dip" />

	 	    <TextView
	 	        android:id="@+id/tx_cm_times"
	 	        android:layout_width="wrap_content"
	 	        android:layout_height="wrap_content"
	 	        android:layout_marginRight="5dip"
	 	        android:text="0"
	 	        android:textColor="@color/white" />
	 	</LinearLayout>

	 	 <ImageView
		        android:id="@+id/iv_video"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/video"
		        android:layout_centerInParent="true"
		        android:visibility="gone"
		      />
	 </RelativeLayout>
	
</LinearLayout>