<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical" >

     <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@color/white"
	    android:layout_above="@+id/ll_med"
	    >
	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="49dip" 
		    android:orientation="horizontal"
		    android:background="@drawable/menu_item_selector"
		    android:id="@+id/ll_typelist"
		    android:visibility="gone"
		    >
		 <TextView 
		     android:layout_height="wrap_content" 
		     android:layout_width="wrap_content"
		     android:layout_gravity="center_vertical"
		     android:layout_marginLeft="20dip"
		     android:textSize="@dimen/text_size_14"
		     android:textColor="@color/sbc_header_text"
		     android:text="类型:"
		     />
		  <LinearLayout 
		    android:id="@+id/ly_writer_type"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:gravity="right"
		    android:clickable="true"
		    android:onClick="selectType"
		    android:background="@drawable/menu_item_selector"
		    >
			    <TextView 
			       	 android:id="@+id/tv_writer_type"
				     android:layout_height="wrap_content" 
				     android:layout_width="wrap_content"
				     android:layout_gravity="center_vertical"
				     android:layout_marginRight="20dip"
				     android:textSize="@dimen/text_size_14"
				     android:textColor="@color/kd_email_ct"
				     android:text="提案"
				     />
			    <TextView 
			         android:id="@+id/im_writer_type"
				     android:layout_height="13dip" 
				     android:layout_width="15dip"
				     android:layout_gravity="center_vertical"
				     android:layout_marginRight="20dip"
			        />
		    </LinearLayout>
	</LinearLayout>
<include layout="@layout/line_grey" ></include>
        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="21dip"
            android:layout_marginRight="21dip"
            android:layout_marginTop="19dip"
            android:background="@null"
            android:gravity="top|left"
            android:textColor="#737373"
            android:hint="请输入内容"
            android:textSize="15sp" />

	</LinearLayout>

<!--      显示图片 -->
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="80dip"
    android:id="@+id/ll_med"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_above="@+id/ll_bottom"
    >
	        <ImageView
		        android:layout_width="65dip"
		        android:layout_height="65dip"
		        android:id="@+id/iv_myimage1"
		        android:scaleType="fitXY"
		        android:layout_marginLeft="20dip"
		        />
	        <ImageView
		        android:layout_width="65dip"
		        android:layout_height="65dip"
		        android:id="@+id/iv_myimage2"
		        android:scaleType="fitXY"
		        android:layout_marginLeft="10dip"
		        />
	        <ImageView
		        android:layout_width="65dip"
		        android:layout_height="65dip"
		        android:id="@+id/iv_myimage3"
		        android:scaleType="fitXY"
		        android:layout_marginLeft="10dip"
		        />
    </LinearLayout>
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="55dip"
	    android:layout_alignParentBottom="true"
	    android:id="@+id/ll_bottom"
	    android:gravity="center_vertical|center_horizontal"
	    android:orientation="horizontal"
	    android:background="@color/bottom_tab_bg"
	    >
    	 <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:gravity="center"
		    android:layout_marginRight="50dip"
		    android:paddingLeft="20dip"
		    android:paddingRight="20dip"
		    android:id="@+id/ll_pic">
		    	<Button
			        android:layout_width="@dimen/text_size_29"
			        android:layout_height="@dimen/text_size_28"
			        android:id="@+id/btn_photo"
			        android:clickable="false"
			        />
		    <TextView
		        android:id="@+id/tv_pic"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/zh_pic"
		        android:gravity="center" 
		        android:layout_marginTop="2dip"
		        android:textSize="9dip"
		        />
    	 </LinearLayout>
    	 <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:gravity="center"
		    android:layout_marginLeft="50dip"
		    android:paddingLeft="20dip"
		    android:paddingRight="20dip"
		    android:id="@+id/ll_photo">
		    <Button
			        android:layout_width="@dimen/text_size_29"
			        android:layout_height="@dimen/text_size_28"
			        android:id="@+id/btn_pic"
			        android:clickable="false"
			        />
		     <TextView
		        android:id="@+id/tv_photo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/zh_photo"
		        android:gravity="center" 
		        android:layout_marginTop="2dip"
		        android:textSize="9dip"
		        />
    	 </LinearLayout>
    </LinearLayout>
</RelativeLayout>
